#!/usr/bin/env python                                                                    

import imp
try:
    imp.find_module('regis')
except ImportError:
    print(f"*** REGIS IS NOT FOUND AS A MODULE. ***")
    print(f"*** THIS IS POSSIBLE WHEN DOING THE VERY FIRST CHECKOUT ***")
    print(f"*** PLEASE RUN _SETUP.PY LOCATED IN THE ROOT DIRECTORY. ***")
    exit(0)

import os
import regis.util

def main():
  root = regis.util.find_root()
  os.system(f"py {os.path.join(root, '_setup.py')}")

if __name__ == "__main__":
  main()